    "prettier": "^3.6.2",
    "rollup": "^4.44.2",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-import-css": "^4.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^9.0.16",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.3"
