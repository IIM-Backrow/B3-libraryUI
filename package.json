{
  "name": "b3-libraryui",
  "version": "0.0.1-beta.1",
  "description": "",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --write --parser typescript 'src/**/*.{ts,tsx}'",
